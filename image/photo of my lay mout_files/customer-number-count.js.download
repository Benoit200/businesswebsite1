(function () {
	const custNumber = 36000;
	const metaLanguage = document.querySelector('meta[name="Language"]').getAttribute('content');
	const langUsed = metaLanguage.replace(/_/gi, '-');

	const customerCount = custNumber.toLocaleString(langUsed);

	const customer = document.getElementsByClassName('newCustCount');
	for (let c of customer) {
		c.textContent = customerCount;
	}
})();
