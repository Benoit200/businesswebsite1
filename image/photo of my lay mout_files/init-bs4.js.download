/* ---------------------------------------------- /*
 * Activate Bootstrap Dropdown Hover and Click Navbar
/* ---------------------------------------------- */
jQuery(function ($) {
	$('.navbar .dropdown').hover(function () {
		$(this).find('.dropdown-menu').first().show();
	}, function () {
		$(this).find('.dropdown-menu').first().hide();
	});
	$('.navbar .dropdown > a').click(function () {
		location.href = this.href;
	});
});

/* ---------------------------------------------- /*
 * Activate Bootstrap tabs on hover
/* ---------------------------------------------- */
(function ($) {
	$(function () {
		$(document).off('click.bs.tab.data-api', '[data-hover="tab"]');
		$(document).on('mouseenter.bs.tab.data-api', '[data-hover="tab"]', function (e) {
			$(this).tab('show');
		});
	});
})(jQuery);

/* ---------------------------------------------- /*
 * hide carousel controls on first and last items
/* ---------------------------------------------- */
if ($("#featured-customers-carousel").length) {
	$("#featured-customers-carousel").carousel({
		interval: false,
		wrap: false
	});
	var checkitem = function () {
		var $this;
		$this = $("#featured-customers-carousel");
		if ($("#featured-customers-carousel .carousel-inner .carousel-item:first").hasClass("active")) {
			$this.children(".left").toggleClass("d-lg-flex");
			$this.children(".right").addClass("d-lg-flex");
		} else if ($("#featured-customers-carousel .carousel-inner .carousel-item:last").hasClass("active")) {
			$this.children(".right").toggleClass("d-lg-flex");
			$this.children(".left").addClass("d-lg-flex");
		} else {
			$this.children(".left, .right").addClass("d-lg-flex");
		}
	};
	checkitem();
	$("#featured-customers-carousel").on("slid.bs.carousel", checkitem);
}

/* ---------------------------------------------- /*
 * Hamburger multi-level menu
/* ---------------------------------------------- */
$(document).ready(function () {
	$(".nav-slide-open").click(function (e) {
		e.preventDefault();
		var slideTarget = $(this).attr("data-slidetarget");
		$(slideTarget).css("width", $("#mobileMenuContainer").width());
		$(slideTarget).css("margin-left", "0");
	});
	$(".nav-slide-close").click(function (e) {
		e.preventDefault();
		var slideTarget = $(this).attr("data-slidetarget");
		$(slideTarget).css("width", "0");
		$(slideTarget).css("margin-left", "100%");
	});
	$(".navbar-collapse").on("hidden.bs.collapse", function (e) {
		$(".navbar-slide").css("width", "0");
		$(".navbar-slide").css("margin-left", "100%");
	});
});

/* ---------------------------------------------- /*
 * Set equal height for all carousel items
 * Required class: .carousel--hauto
/* ---------------------------------------------- */
document.addEventListener('readystatechange', event => {
	if (event.target.readyState === 'complete') {
		let setCarouselHeight = function () {
			var items = $('.carousel--hauto .carousel-item'), //grab all slides
				heights = [], //create empty array to store height values
				tallest; //create variable to make note of the tallest slide
			if (items.length) {
				let normalizeHeights = function () {
					items.each(function () { //add heights to array
						heights.push($(this).height());
					});
					tallest = Math.max.apply(null, heights); //cache largest value
					items.each(function () {
						$(this).css('min-height', tallest + 'px');
					});
				};
				normalizeHeights();

				$(window).on('resize orientationchange', function () {
					tallest = 0, heights.length = 0; //reset vars
					items.each(function () {
						$(this).css('min-height', '0'); //reset min-height
					});
					normalizeHeights(); //run it again
				});
			}
		};
		setCarouselHeight();
	}
});